<div class="row">
  <div class="container-fluid article-container">
    {{#each article}} {{#if saved}}
    <div class="card">
      <div class="card-header">
        <h3>
          <a class="article-link" target="_blank" rel="noopener noreferrer" href={{url}}>{{headline}}</a>
                </h3>
          <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>View/Add Notes</button>
          <button class="btn btn-danger delete-btn" data-id={{_id}}>Delete Article</button>
  
        </button>
      </div>
      <div class="card-body">{{summary}}</div>
    </div>
  </div>
